<?xml version="1.0" encoding="UTF-8"?>
<project name="Remote.Setup">

	<target name="remote:setup:releases-directory">
		<seclibssh
			host="${target.hostname}"
			port="${target.port}"
			username="${target.username}"
			password="${target.password}"
			command="mkdir -m ${target.releases.dir.mode} -p ${target.path}/${target.releases.dir}" />

		<echo>Successfully created releases directory ${target.path}/${target.releases.dir}</echo>
	</target>

	<target name="remote:setup:new-release-directory" depends="remote:setup:releases-directory, project:get-release-id">
		<seclibssh
			host="${target.hostname}"
			port="${target.port}"
			username="${target.username}"
			password="${target.password}"
			command="mkdir -m ${target.releases.dir.mode} -p ${target.path}/${target.releases.dir}/${release.id}" />

		<echo>Successfully created new release directory ${target.path}/${target.releases.dir}/${release.id}</echo>
	</target>
</project>