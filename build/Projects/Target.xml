<?xml version="1.0" encoding="UTF-8"?>
<project name="Target">

	<target name="target:cleanup-releases:prepare">
		<php expression="${target.releases.keep} + 1" returnProperty="superfluousReleasesStart" />
	</target>

	<target name="target:cleanup-releases" depends="target:cleanup-releases:prepare">
		<seclibssh
			host="${target.hostname}"
			port="${target.port}"
			username="${target.username}"
			password="${target.password}"
			command="ls -1dt ${target.path}/${target.releases.dir}/* | tail -n +${superfluousReleasesStart} | xarg rm -rf" />
	</target>

	<target name="target:run" depends="project:is-clean, target:release:upload:run, target:release:extract:run, target:release:update-symlink:run, target:cleanup-releases">
	</target>
</project>