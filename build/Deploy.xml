<?xml version="1.0" encoding="UTF-8"?>
<project name="Deploy" default="run">
	<property file="./Build.properties" />
	<property file="./Secret.properties" />

	<import file="./ReplaceTokens.xml" />

	<target name="build-typo3-cms-download-url">
		<property name="typo3.cms.downloadUrl" value="http://get.typo3.org/" />

		<if>
			<not>
				<equals arg1="${typo3.cms.flavor}" arg2="" />
			</not>
			<then>
				<property name="typo3.cms.downladUrl" value="${typo3.cms.downloadUrl}${typo3.cms.flavor}-" override="true" />
			</then>
		</if>

		<property name="typo3.cms.downloadUrl" value="${typo3.cms.downloadUrl}${typo3.cms.version}/" override="true" />

		<if>
			<not>
				<equals arg1="${typo3.cms.format}" arg2="tar" />
			</not>
			<then>
				<property name="typo3.cms.downloadUrl" value="${typo3.cms.downloadUrl}${typo3.cms.format}" override="true" />
			</then>
		</if>

		<echo>TYPO3 CMS download URL: ${typo3.cms.downloadUrl}</echo>
	</target>

	<target name="download-typo3-cms" depends="build-typo3-cms-download-url">
		<echo>Your wget command is:</echo>
		<echo>wget ${typo3.cms.downloadUrl} -O www/typo3cms.tgz</echo>
	</target>

	<target name="run" depends="download-typo3-cms">
	</target>
</project>