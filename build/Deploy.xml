<?xml version="1.0" encoding="UTF-8"?>
<project name="Deploy" default="deploy:run">

	<property file="./Properties/Build.properties" />
	<property file="./Properties/Secret.properties" />

	<import file="./Projects/SelectTarget.xml" />
	<import file="./Projects/CheckRequirements.xml" />
	<import file="./Projects/EvaluateTemplates.xml" />
	<import file="./Projects/TYPO3CMS/Package/Download.xml" />
	<import file="./Projects/TYPO3CMS/Package/Extract.xml" />
	<import file="./Projects/TYPO3CMS/Package/LocalConfiguration.xml" />
	<import file="./Projects/TYPO3CMS/Package/Configuration.xml" />
	<import file="./Projects/Project.xml" />
	<import file="./Projects/Remote/Setup.xml" />
	<import file="./Projects/Remote.xml" />

	<target name="deploy:requirements" depends="select-target:run, check-requirements:run">
	</target>

	<target name="deploy:typo3cms" depends="typo3cms:package:download:run, typo3cms:package:extract:run">
	</target>

	<target name="deploy:configure" depends="typo3cms:package:localconfiguration:run, typo3cms:package:configuration:run">
	</target>

	<target name="deploy:run" depends="deploy:requirements, deploy:typo3cms, deploy:configure, remote:run">
	</target>
</project>